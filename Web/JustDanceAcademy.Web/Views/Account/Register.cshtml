@using JustDanceAcademy.Models


@model RegisterViewModel
@{
	ViewData["Title"] = "Register";
}
<h1>@ViewData["LoginTitle"]</h1>
<br>
<br>
<div class="cont">
	<div class="sub-cont">

		<div class="img">
			<div class="img__text m--up">

				<h3>Don't have an account? Please Sign up!</h3>
			</div>
			<div class="img__text m--in">

				<h3>
					If you already has an account, just <a class="m--in" href='@Url.Action("Login", "Account")'>
						<input type='button' value='SIGN IN' />
					</a>
				</h3>
			</div>
			<div class="img__btn">
				<span class="m--up">Sign Up</span>
			</div>
		</div>

		<form asp-controller="Account" asp-action="Register" method="post">
			<div class="form sign-up">
				<h2>Create your Account</h2>
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<label>

					<span asp-validation-for="UserName" class="small text-danger"></span>
					<input asp-for="UserName" class="form-control" placeholder="Username">
				</label>

				<label>
					<span asp-validation-for="Email" class="small text-danger"></span>
					<input asp-for="Email" class="form-control" placeholder="Email">
				</label>


				<label>
					<input asp-for="Password" class="form-control" placeholder="Password">
				</label>

				<label>
					<input asp-for="ConfirmPassword" class="form-control" placeholder="Retype password">
				</label>
				<div class="col-4">
					<button type="submit" style="margin-top:40px;margin-bottom:20px;background:#d4af7a;text-transform:uppercase">Register</button>
				</div>
				<!-- /.col -->
			</div>
		</form>
	</div>
</div>




<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
	var msg = '@TempData["Msg"]';
	if (msg.length) {
		swal(msg);
	}
</script>

<link rel="stylesheet" href="~/Content/css/form.css" />
<script>
	document.querySelector('.img__btn').addEventListener('click', function () {
		document.querySelector('.cont').classList.toggle('s--signup');
	});
</script>
@section Scripts{
	<partial name="_ValidationScriptsPartial.cshtml" />
    }


