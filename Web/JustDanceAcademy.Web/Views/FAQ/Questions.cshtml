@using JustDanceAcademy.Data.Models;

@model IEnumerable<CommonQuestion>

<h1>Frequently Asked Questions</h1>

@{
	var isFirst = true;
}
@foreach (var item in Model)
{
	if (isFirst)
	{
		<div class="faqs-container">
			<div class="faq active">
				<h3 class="faq-title">
					@item.Question
				</h3>
				<p class="faq-text">
					@item.Answear
				</p>
				<button class="faq-toggle">
					<i class="fa fa-chevron-down"></i>
					<i class="fa fa-times"></i>
				</button>
			</div>
		</div>
		isFirst = false;
	}
	else
	{

		<div class="faq">
			<h3 class="faq-title">
				@item.Question
			</h3>
			<p class="faq-text">
				@item.Answear
			</p>
			<button class="faq-toggle">
				<i class="fa fa-chevron-down"></i>
				<i class="fa fa-times"></i>
			</button>
		</div>
	}

}
<h4>Have more questions? Click on <b>Get in Touch</b> and ask your question in one of our social platforms.</h4>

