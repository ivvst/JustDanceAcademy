@using JustDanceAcademy.Web.ViewModels.Models


@model IEnumerable<MyClassViewModel>
@{
	ViewBag.Title = "My Class";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
	@if (Model == null)
	{
		<h2>Your body will become more flexible. You will feel more confident on the dance floor. You will feel music better.</h2>
		<h3>Feel the rthym in you! <a asp-area="" asp-controller="Class" asp-action="All" class="site-btn2">START NOW</a></h3>
	}
	else
	{

		@foreach (var item in Model)
		{


			<div class="card col-4" style="width: 20rem; ">
				<img class="card-img-top" style="width: 18rem;"
			 src="@item.ImageUrl" alt="Book Image">
				<div class="card-body">
					<h5 class="card-title mt-1">@item.Name</h5>
					<p class="mb-0">Author: @item.Instructor</p>
					<p class="mb-0">Description: @item.Description</p>
					<p>Category: @item.Category</p>
				</div>

				<form class="input-group-sm" asp-controller="Class" asp-action="LeaveClass" asp-route-classId="@item.Id">
					<input class="fs-6 btn btn-success mb-3 p-2" onclick="return confirm('You are going to leave a @item.Name Dance-class')" type="submit" value="Leave Class" />
				</form>

				<button>
					<ul>
						<a asp-area="" asp-controller="Class" asp-action="Plans">Get-Paid </a>
					</ul>
				</button>

				<button>
					<ul>
						<a asp-area="" asp-controller="Class" asp-action="Write">Add-Review </a>
					</ul>
				</button>

			</div>
			<input type="submit" onclick=" return myConfirm(  )" value="Alert" class="btn btn-danger mb-2" />

		}
	}



</div>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
	var msg = '@TempData["Msg"]';
	if (msg.length) {
		swal(msg);
	}
</script>

