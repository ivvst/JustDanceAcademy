@using JustDanceAcademy.Data.Models
@using JustDanceAcademy.Models;




@model IEnumerable<Class>

@foreach (var item in Model)
{
	<div id="container">
		<!-- Start	Class details -->
		<div class="product-details">
			<!-- 	Class Name -->
			<h1>@item.Name</h1>
			<!-- The most important information about the product -->
			<p class="information">"@item.Description"</p>
			@if (User.IsInRole("Administrator") == false)
			{

				<form class="input-group-sm" asp-controller="Class" asp-action="StartClass" asp-route-classId="@item.Id">
					<input type="submit" onclick="return confirm('You are going to train Class with Name :@item.Name')" value="Start-Dance-Class"
				   class="fs-6 btn btn-success mb-5 p-4" />
				</form>

			}
		</div>

		<div class="product-image">

			<img src="@item.ImageUrl" alt="Omar Dsoky">

			<!-- 	danceClass Information-->
			<div class="info">
				<h2>The Description</h2>
				<ul>
					<li><strong>Instructor: </strong>@item.Instructor</li>
					<li><strong>Dance-Category: </strong>@item.LevelCategory.Name</li>
					<br>
					<li><strong>Age: </strong>Press "Schedule" for more Info</li>
				</ul>
			</div>
		</div>



	</div>


	<link href="~/Content/css/class-box.css" rel="stylesheet" />

	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" crossorigin="anonymous">
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
	var msg = '@TempData["Msg"]';
	if (msg.length) {
		swal(msg);
	}
</script>


