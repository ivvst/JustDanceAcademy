@using JustDanceAcademy.Data.Models
@using JustDanceAcademy.Models;

@model IEnumerable<Class>

@foreach (var item in Model)
{
	<div id="container">
		<!-- Start	Class details -->
		<div class="product-details">
			<!-- 	Class Name -->
			<h1>@item.Name</h1>
			<!-- The most important information about the product -->
			<p class="information">"@item.Description"</p>
			@if (User.IsInRole("Administrator") == false)
			{

				<form class="input-group-sm"  asp-controller="Class" asp-action="StartClass" asp-route-classId="@item.Id">
					<input type="submit" onclick="return confirm('You are going to train Class with Name :@item.Name')" value="Start-Dance-Class"
				   class="fs-6 btn btn-success mb-5 p-4" style="padding:10px" />
				</form>

			}
		</div>

		<div class="product-image">

			<img src="@item.ImageUrl" alt="Omar Dsoky">

			<!-- 	danceClass Information-->
			<div class="info">
				<h2>The Description</h2>
				<ul>
					<li><strong>Instructor: </strong>@item.Instructor</li>
					<li><strong>Dance-Category: </strong>@item.LevelCategory.Name</li>
					<li><strong>Age: </strong>Press "Schedule" for more Info</li>
				</ul>
			</div>
		</div>

		<div id="servermsg">
			<ul id="msglist">
			</ul>
		</div>





	</div>


		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" integrity="sha512-3pIirOrwegjM6erE5gPSwkUzO+3cTjpnV9lexlNZqvupR64iZBnOOTiiLPb9M36zpMScbmUNIcHUqKD47M719g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link href="~/Content/css/class-box.css" rel="stylesheet" />

	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" crossorigin="anonymous">
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

		<script src="~/Content/js/dist/browser/signalr.js"></script>
		<script src="~/Content/js/notification.js"></script>

		<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
	var msg = '@TempData["Msg"]';
	if (msg.length) {
		swal(msg);
	}

</script>


