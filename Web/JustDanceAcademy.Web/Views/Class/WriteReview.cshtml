@using JustDanceAcademy.Web.ViewModels.Models
@model ReviewViewModel

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">

			<div class="form-group">
				<label asp-for="Student"></label>
				<input asp-for="Student" class="form-control" placeholder="Optional...">
				<span asp-validation-for="Student" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Context"></label>
				<textarea asp-for="Context" rows="4" class="form-control" placeholder="Your review..."></textarea>
				<span asp-validation-for="Context" class="small text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="NameClass">Name-Class</label>
				<div class="disabled">
					<input asp-for="NameClass" class="form-control" />
					<span asp-validation-for="NameClass" class="small text-danger"></span>
				</div>
				<style>
					.disabled {
						pointer-events: none;
						opacity: 0.4;
					}
				</style>

			</div>

			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Add-Review" />
			</div>
			<br />
			@* <button>
			<ul>
			<a asp-area="" asp-controller="Class" asp-action="Classes">Back-</a>
			</ul>
			</button>*@
		</form>
	</div>
</div>