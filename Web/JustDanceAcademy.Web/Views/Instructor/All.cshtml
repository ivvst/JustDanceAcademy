	<meta name="theme-color" content="#2f34df">
	<meta property="og:title" content="Page 2">
	<meta property="og:type" content="website">
</head>


@foreach (var person in Model)
{


	<body class="u-body u-xl-mode" data-lang="en">
		<header class="u-clearfix u-header u-header" id="sec-41c2"><div class="u-clearfix u-sheet u-sheet-1"></div></header>
		<section class="u-align-center u-clearfix u-section-1" id="carousel_8920">
			<div class="u-clearfix u-sheet u-sheet-1">
				<h3 class="u-custom-font u-font-merriweather u-text u-text-default u-text-1" data-animation-name="slideIn" data-animation-duration="2000" data-animation-direction="Left">@person.Name</h3>
				<div class="u-image u-image-circle u-image-1" alt="" data-image-width="721" data-image-height="1080" data-animation-name="rollIn" data-animation-duration="2000" data-animation-direction="">
					<img src="@person.ImageUrl" alt="trainer" style="width:50%;height:70%;">
				</div>
				<h5 class="u-custom-font u-font-ubuntu u-text u-text-2">
					is Trainer of <b>@person.Class.Name</b>
                    for category/ies:
					<form class="mt-2" asp-area="" asp-controller="Instructor" asp-action="ShowCategories" asp-route-classId="@person.Class.Id">
						<div class="d-grid gap-2" style="margin-bottom:5px">

							<input type="submit" value="Show Dance Categories"
							   class="btn btn-danger mb-2" />
						</div>
					</form>
				</h5>
				<p class="u-align-justify-lg u-align-justify-md u-align-justify-xl u-text u-text-black-40 u-text-3" data-animation-name="slideIn" data-animation-duration="2000" data-animation-direction="Right">
					@person.Biography
					@if (User.IsInRole("Administrator"))
					{

						<button class="button">
							<ul>
								<a asp-area="Administration" asp-controller="Instructor" asp-action="Edit" asp-route-id="@person.Id">Edit</a>
							</ul>
						</button>

					}
				</p>
			</div>
		</section>



	</body>
}
</html>
