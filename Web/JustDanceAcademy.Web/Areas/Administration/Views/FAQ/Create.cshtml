@using JustDanceAcademy.Web.ViewModels.Models;

@model QuestViewModel

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form asp-action="Create" method="post" enctype="multipart/form-data">
			<div class="mb-3">
				<label asp-for="@Model.Question">Question</label>
				<input asp-for="@Model.Question" class="form-control" />
				<span asp-validation-for="Question" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="@Model.Answer">Answer</label>
				<textarea asp-for="@Model.Answer" class="form-control" rows="5"></textarea>
				<span asp-validation-for="Answer" class="text-danger"></span>
			</div>
			<br />
			<br />
			<div class="mb-3">
				<input class="btn btn-primary" type="submit" value="Add" />
			</div>
		</form>
	</div>
</div>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" crossorigin="anonymous">

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
	var msg = '@TempData["Msg"]';
	if (msg.length) {
		//swal(msg,"success");
		swal({
			text: msg,
			icon: "info",
			button: "Ok",
		});
	}
</script>

