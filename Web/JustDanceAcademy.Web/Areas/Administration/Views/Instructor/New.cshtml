@using JustDanceAcademy.Web.ViewModels.Models


@model InstructorViewModel

<hr />
<div class="row">

	<h1 style="text-align:center"> Add-Instructor </h1>
	<br />
	<br />
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form asp-action="New" method="post" enctype="multipart/form-data">
			<div class="mb-3">
				<label asp-for="@Model.FullName" style="font-size:2rem">Full-Name</label>
				<input asp-for="@Model.FullName" class="form-control" />
				<span asp-validation-for="FullName" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.AboutYou" style="font-size:2rem">About you</label>
				<input asp-for="@Model.AboutYou" class="form-control"  />
				<span asp-validation-for="AboutYou" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="@Model.ImageUrl" style="font-size:2rem">Image URL </label>
				<input asp-for="@Model.ImageUrl" class="form-control" />
				<span asp-validation-for="ImageUrl" class="text-danger"></span>
				@Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })
			</div>

			<div class="mb-3">
				<label asp-for="@Model.ClassId" style="font-size:2rem">Choose Class</label>
				<select asp-for="@Model.ClassId" class="form-control">
					@foreach (var item in Model.ClassesOfInstructor)
					{
						<option value="@item.Id">@item.Name - @item.LevelCategory.Name</option>

					}
				</select>
				<span asp-validation-for="ClassId" class="text-danger"></span>
			</div>
			<br />
			<br />
			<div class="mb-3">
				<input class="btn btn-primary" type="submit" value="Apply" />
			</div>
		</form>
	</div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
	var msg = '@TempData["Msg"]';
	if (msg.length) {
		swal(msg);
	}
</script>

